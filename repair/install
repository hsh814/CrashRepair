#!/bin/bash
#
# This script creates portable Docker volumes for crashrepairfix
#
set -eu
HERE_DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
IMAGE_TO_VOLUME="${HERE_DIR}/image_to_volume"

docker build -t crepairfix .
${IMAGE_TO_VOLUME} crepairfix crepairfix_opt /opt/crashrepair
${IMAGE_TO_VOLUME} christimperley/llvm11 llvm11_opt /opt/llvm11
